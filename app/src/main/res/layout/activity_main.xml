<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_main.xml -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/fLayout"
    android:layout_height="match_parent"
    >

    <!-- Custom Drawing View -->

    <!-- ImageView for listener -->

    <com.example.draw.DrawingView
        android:id="@+id/drawingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/tp"
        android:layout_width="400dp"
        android:layout_height="550dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/open"
        android:layout_width="45dp"
        android:layout_height="35dp"
        android:onClick="pickImage"
        android:src="@drawable/open_folder"
        android:layout_marginStart="150dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/save"
        android:layout_marginStart="200dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/delete"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:src="@drawable/delete"
        android:layout_marginStart="243dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/paint_bucket"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:src="@drawable/paint_bucket"
        android:layout_marginStart="285dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="4dp" />

    <ImageView
        android:id="@+id/eraser"
        android:layout_width="30dp"
        android:layout_height="45dp"
        android:src="@drawable/eraser"
        android:layout_marginStart="335dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="4dp" /><!-- Icon for eraser or other actions -->


    <SeekBar
        android:id="@+id/seekBar"
        android:layout_width="221dp"
        android:layout_height="40dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="670dp"
        android:layout_marginBottom="4dp"
        android:max="100"/>

</FrameLayout>
